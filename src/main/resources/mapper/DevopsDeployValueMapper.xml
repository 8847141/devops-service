<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="io.choerodon.devops.infra.mapper.DevopsDeployValueMapper">
    <select id="listByOptions" resultType="io.choerodon.devops.infra.dto.DevopsDeployValueDTO">
        SELECT
        dpv.id,
        dpv. NAME,
        dpv.description,
        dpv.created_by,
        dpv.last_update_date,
        de.`name` AS envName,
        da.`name` AS appName,
        dpv.env_id,
        dpv.app_service_id
        FROM
        devops_deploy_value dpv
        JOIN devops_env de ON de.id = dpv.env_id
        JOIN devops_app_service da ON da.id = dpv.app_service_id
        <if test="userId !=null">
            JOIN devops_env_user_permission deup ON (
            deup.iam_user_id = #{userId}
            AND deup.is_permitted = 1
            AND dpv.env_id = deup.env_id
            )
        </if>
        WHERE
        dpv.project_id = #{projectId}
        <if test='appServiceId != null and appServiceId !=""'>
            AND dpv.app_service_id = #{appServiceId}
        </if>
        <if test='envId != null and envId !=""'>
            AND dpv.env_id = #{envId}
        </if>
        <include refid="sqlparam"/>
    </select>

    <sql id="sqlparam">
        <if test='searchParam != null'>
            <if test='searchParam.name != null and searchParam.name.size > 0'>
                AND
                <foreach collection="searchParam.name" item="name" open="(" separator=" OR " close=")">
                    dpv.name LIKE CONCAT(CONCAT('%', #{name, jdbcType=VARCHAR}),'%')
                </foreach>
            </if>
            <if test='searchParam.description != null and searchParam.description.size > 0'>
                AND
                <foreach collection="searchParam.description" item="description" open="(" separator=" OR " close=")">
                    dpv.description LIKE CONCAT(CONCAT('%', #{description, jdbcType=VARCHAR}),'%')
                </foreach>
            </if>
        </if>
        <if test='param != null and param != ""'>
            AND (dpv.name LIKE CONCAT(CONCAT('%', #{param, jdbcType=VARCHAR}),'%')
            OR dpv.description LIKE CONCAT(CONCAT('%', #{param, jdbcType=VARCHAR}),'%'))
        </if>
    </sql>
</mapper>