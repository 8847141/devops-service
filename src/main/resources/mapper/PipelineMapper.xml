<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="io.choerodon.devops.infra.mapper.PipelineMapper">
    <select id="listByOptions" resultType="io.choerodon.devops.infra.dataobject.PipelineDO">
        SELECT
        dp.is_enabled,
        dp. NAME,
        dp.trigger_type,
        dp.created_by,
        dp.last_update_date,
        dp.object_version_number,
        dp.created_by,
        dp.id
        FROM
        devops_pipeline dp
        where dp.project_id=#{projectId}
        <include refid="sqlparam"/>
        <if test="index !=''">
            ORDER BY
            dp.is_enabled DESC,
            dp.id DESC
        </if>
    </select>

    <sql id="sqlparam">
        <if test='searchParam != null'>
            <if test='searchParam.name != null and searchParam.name.size > 0'>
                AND
                <foreach collection="searchParam.name" item="name" open="(" separator=" OR " close=")">
                    dp.name LIKE CONCAT(CONCAT('%', #{name, jdbcType=VARCHAR}),'%')
                </foreach>
            </if>
            <if test='searchParam.triggerType != null and searchParam.triggerType.size > 0'>
                AND
                <foreach collection="searchParam.triggerType" item="triggerType">
                    dp.trigger_type LIKE CONCAT(CONCAT('%', #{triggerType, jdbcType=VARCHAR}),'%')
                </foreach>
            </if>
        </if>
        <if test='param != null and param != ""'>
            AND (dp.name LIKE CONCAT(CONCAT('%', #{param, jdbcType=VARCHAR}),'%')
            OR dp.trigger_type LIKE CONCAT(CONCAT('%', #{param, jdbcType=VARCHAR}),'%')
            )
        </if>
    </sql>

</mapper>
